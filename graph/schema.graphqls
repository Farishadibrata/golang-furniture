# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Item {
  id: ID!
  name: String!
  style: String!
  description: String!
  Price: Int!
}

type Query {
  items: [Item!]!
  item(id: ID!): Item!
}

input NewItem {
  name: String!
  style: String!
  description: String!
  Price: Int!
}

type Mutation {
  createItem(input: NewItem!): Item!
}
